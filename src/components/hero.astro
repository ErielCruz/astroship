---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="place-items-center pt-16 pb-8 md:pt-12 md:pb-24">

  <!-- Content Section -->
  <div>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Hello chat! Hello Julia!
    </h1>
    
    <!-- Embed Video Section -->
    <div class="relative mt-8 w-full">
      <!-- Video -->
      <video id="lul-video" class="w-full" src="/assets/LUL.mp4" muted controls></video>

      <!-- Play Button (centered on the video) -->
      <button id="play-button" class="absolute inset-0 m-auto bg-[#6441a5] hover:bg-[#5a389b] text-white py-2 px-4 rounded text-lg">
        Click to play, safe for Twitch
      </button>
    </div>
  </div>
</main>

<!-- Custom Script to control video play behavior -->
<script>
  const video = document.getElementById("lul-video");
  const playButton = document.getElementById("play-button");

  // Initially pause the video and hide the controls until the button is pressed
  video.pause();
  video.controls = false;

  playButton.addEventListener("click", () => {
    // Remove the button once the video is played
    playButton.style.display = 'none';
    
    // Enable audio and controls, then play the video
    video.muted = false;
    video.controls = true;
    video.play();
  });
</script>
